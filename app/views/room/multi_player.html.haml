=render "share/header"
.container
  .container-fluid
    .row-fluid
      .span7
        .alert.alert-info
          %p
            %h3
              请选择游戏房间
        %ul.unstyled
        -if @rooms.any?
          -for room in @rooms
            %li= link_to "进入"+room.name,{:action=>"current_multi_game",:controller=>"room",:roomid=>room.id},:id=>"room"+room.id.to_s
            %p
              当前room人员:
              %strong 
                2/3

      .span5
        = render "share/sidelink"
= render "share/footer"
